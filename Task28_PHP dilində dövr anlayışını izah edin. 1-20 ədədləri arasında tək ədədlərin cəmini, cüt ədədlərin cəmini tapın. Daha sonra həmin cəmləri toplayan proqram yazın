<?php
    $cutCem = 0;
    $tekCem = 0;

    for($i = 1; $i <= 20; $i++)
    {
        if ($i%2 == 1) {
            $tekCem = $tekCem + $i;
        } else {
            $cutCem = $cutCem + $i;
        }
    }

    echo $tekCem . " tek\n";
    echo $cutCem . " cut\n";
    echo $tekCem + $cutCem;
?>
// FOREACH NUMUNE
