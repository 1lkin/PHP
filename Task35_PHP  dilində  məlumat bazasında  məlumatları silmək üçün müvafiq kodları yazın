<?php
$servername = "localhost";
$username = "root";
$password = '';
$dbname = 'slr';

$conn = mysqli_connect($servername, $username, $password, $dbname);
if (! $conn) {
    die('baglanti xetasi' . mysqli_connect_error());
}

$id = 5;

$sql = "DELETE FROM slr_10 WHERE id = $id";
if (mysqli_query($conn, $sql)) {
    echo "Məlumat uğurla silindi";
} else {
    echo "Məlumat silinə bilmədi" . mysqli_error($conn);
}

?>
